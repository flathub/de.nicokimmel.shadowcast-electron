{
  "app-id": "de.nicokimmel.shadowcast-electron",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.node18"
  ],
  "base": "org.electronjs.Electron2.BaseApp",
  "base-version": "23.08",
  "command": "run.sh",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--device=all",
    "--socket=pulseaudio",
    "--share=network"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/node18/bin",
    "env": {
      "NPM_CONFIG_LOGLEVEL": "info"
    }
  },
  "modules": [
    {
      "name": "shadowcast-electron",
      "buildsystem": "simple",
      "build-options": {
        "env": {
          "XDG_CACHE_HOME": "/run/build/shadowcast-electron/flatpak-node/cache",
          "npm_config_cache": "/run/build/shadowcast-electron/flatpak-node/npm-cache",
          "npm_config_offline": "true"
        }
      },
      "build-commands": [
        "npm install --offline",
        "flatpak-node/electron-builder-arch-args.sh",
        "npm run build -- $ELECTRON_BUILDER_ARCH_ARGS  --linux --dir",
        "cp -r dist/linux-unpacked/* /app/build",
        "install -Dm755 run.sh /app/bin/run.sh",
        "install -Dm644 flatpak/de.nicokimmel.shadowcast-electron.desktop /app/share/applications/de.nicokimmel.shadowcast-electron.desktop",
        "install -Dm644 flatpak/de.nicokimmel.shadowcast-electron.metainfo.xml /app/share/metainfo/de.nicokimmel.shadowcast-electron.metainfo.xml",
        "install -Dm644 src/public/images/icon.png /app/share/icons/hicolor/512x512/apps/de.nicokimmel.shadowcast-electron.png"
      ],
      "sources": [
        "generated-sources.json",
        {
          "type": "git",
          "url": "https://github.com/nicokimmel/shadowcast-electron.git",
          "tag": "v1.0.2",
          "commit": "4dc68d9920ff25be697caad380585f7c5a7d2f24"
        },
        {
          "type": "script",
          "commands": [
            "zypak-wrapper.sh /app/build/shadowcast-electron \"$@\""
          ],
          "dest-filename": "run.sh"
        }
      ]
    }
  ]
}